{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Crypto Tray",
  "version": "0.1.0",
  "identifier": "dev.andyng.cryptotray",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Crypto Tray",
        "label": "main",
        "width": 640,
        "height": 800,
        "minWidth": 640,
        "minHeight": 600,
        "center": true,
        "decorations": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
